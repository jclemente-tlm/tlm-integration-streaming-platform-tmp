{
    "name": "source_cdc_talmabd_LIM_W1_HL",
    "config": {
        "connector.class": "io.debezium.connector.oracle.OracleConnector",
        "tasks.max": 1,
        "topic.prefix": "talmabd",
        "database.hostname": "{{DB_TALMABD_HOST}}",
        "database.port": "{{DB_TALMABD_PORT}}",
        "database.user": "{{DB_TALMABD_USER}}",
        "database.password": "{{DB_TALMABD_PASSWORD}}",
        "database.dbname": "{{DB_TALMABD_DBNAME}}",
        "database.connection.adapter": "logminer",
        "snapshot.mode": "no_data",
        "schema.history.internal.kafka.topic": "schema-changes.talmabd_LIM_W1_HL",
        "schema.history.internal.kafka.bootstrap.servers": "{{BROKER_1_IP}}:29092,{{BROKER_2_IP}}:29092",
        "schema.history.internal.store.only.captured.tables.ddl": true,
        "schema.history.internal.store.only.captured.databases.ddl": true, 
        "log.mining.archive.log.only.mode": true,
        "database.include.list": "talmabd",
        "schema.include.list": "LIM_W1_HL",
        "table.include.list": "LIM_W1_HL.KUND,LIM_W1_HL.LAGI,LIM_W1_HL.TRANSLATED_COMBO,LIM_W1_HL.IRUN_INVOICE_RUN,LIM_W1_HL.VEHICLES_REGISTRATION,LIM_W1_HL.IOBD_INVOICE_OBJECT_DTL,LIM_W1_HL.IADR_INVOICE_ADDRESSES,LIM_W1_HL.INVH_INVOICE_HEADER,LIM_W1_HL.VHLD_VEHICLEDETAIL,LIM_W1_HL.INVL_INVOICE_LINES,LIM_W1_HL.DRIV_DRIVER_DETAILS,LIM_W1_HL.INVP_INVOICE_PAYMENTS,LIM_W1_HL.WHSE_WAREHOUSE",        
        "time.precision.mode": "connect",
        "decimal.handling.mode": "precise",
        "binary.handling.mode": "hex",
        "converters": "dateToString,numberToLong",
        "dateToString.type": "oryanmoshe.kafka.connect.util.OracleDateToStringConverter",
        "dateToString.format.time": "HH:mm:ss",
        "dateToString.format.date": "YYYY-MM-dd HH:mm:ss",
        "dateToString.format.datetime": "YYYY-MM-dd HH:mm:ss",
        "dateToString.debug": "true",
        "numberToLong.type": "oryanmoshe.kafka.connect.util.OracleNumberToLongConverter",
        "numberToLong.debug": "true",
        "transforms": "unwrap",
        "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
        "transforms.unwrap.delete.tombstone.handling.mode": "rewrite-with-tombstone",
        "transforms.unwrap.add.fields": "op,source.ts_ms,source.ts_us"
    }
}
